!!!
%html
  %head
    %title= title
    = stylesheet_link_tag 'blueprint/screen'
    = stylesheet_link_tag 'blueprint/print', :media => :print
    = stylesheet_link_tag 'formtastic', 'formtastic_changes'
    = stylesheet_link_tag 'buttons/css3buttons'
    = stylesheet_link_tag 'application'
    = javascript_include_tag :defaults
    = csrf_meta_tag

  %body
    #menu
      .container
        %h1= link_to 'Gift Manager', root_path
        %ul.tabs
          %li{:class => (request.path =~ /^\/bins/) ? 'active' : ''}= link_to 'Bins', bins_path
          %li{:class => (request.path =~ /^\/donors/) ? 'active' : ''}=link_to 'Donors', donors_path
          %li{:class => (request.path =~ /^\/books/) ? 'active' : ''}=link_to 'Books', books_path
        - if user_signed_in?
          .right
            = link_to 'Sign out', destroy_user_session_path

    #header
      .container 
        .breadcrumb
          = yield :breadcrumb
        .action_items.right
          = yield :action_items
        %h2
          = yield :page_title

    .container
      #flash
        -flash.each do |key, value|
          .flash{:class => key}= value

      = yield
