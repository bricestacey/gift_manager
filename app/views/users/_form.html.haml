= form_for @user do |f|
  %fieldset
    %legend= @user.email

    .clearfix
      = f.label :email
      .input
        = f.text_field :email

    .clearfix
      = f.label :password
      .input
        = f.text_field :password

    .clearfix
      = f.label :password_confirmation
      .input
        = f.text_field :password_confirmation

    .actions
      = f.submit class: 'btn primary'
